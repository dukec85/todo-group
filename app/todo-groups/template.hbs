<div class="app">
  <div class="content section">
    <div class="container">
      <h2 class="app-title"><i class="fa fa-bars" aria-hidden="true"></i> Todos</h2>

      <nav class="nav">
        {{#each model as |todoGroup|}}
          {{#link-to "todo-groups.edit" todoGroup.id class="nav__item" }}
            {{todoGroup.title}}
          {{/link-to}}
        {{/each}}

        {{#link-to "todo-groups.new" class="nav__item nav__item--new-link" }}
          {{todoGroup.title}}
        {{/link-to}}
      </nav>
    </div>
  </div>

  <div class="section">
    {{outlet}}
  </div>
</div>
